<Window x:Class="Baremiseur.Windows.AddClassroom"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Baremiseur.Windows"
        mc:Ignorable="d"
        Title="Ajouter une classe" Height="107" Width="313" WindowStartupLocation="CenterScreen">
    <Grid>

        <StackPanel Margin="5">

            <Label>Nom :</Label>

            <Grid>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="TextName"></TextBox>
                <Button Grid.Column="1" Margin="5, 0, 0, 0" Click="AddClassroomClick">Ajouter</Button>

            </Grid>

        </StackPanel>
        
    </Grid>
    
</Window>
