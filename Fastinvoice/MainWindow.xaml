<Window x:Class="Baremiseur.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Baremiseur"
        mc:Ignorable="d"
        Title="Fastinvoice" Height="900" Width="1600" WindowStartupLocation="CenterScreen">
    <Grid>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1" Margin="5">

            <Label>Bienvenue</Label>

            <Button x:Name="NavDashboard" Height="50" Margin="5" Click="NavDashboardClick">Dashboard</Button>
            <Button x:Name="NavStudents" Height="50" Margin="5" Click="NavStudentsClick">Élèves</Button>

        </StackPanel>

        <Frame x:Name="MainFrame" Margin="20" NavigationUIVisibility="Hidden" Grid.Row="1" Grid.Column="1">
            
        </Frame>

    </Grid>
</Window>
