<UserControl x:Class="Baremiseur.Pages.DashboardControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Baremiseur.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="5">
        <StackPanel>

            <Label>Afin de démarrer l'enregistrement des résultats, veuillez sélectionner une classe.</Label>

            <StackPanel
                Orientation="Horizontal">

                <ComboBox
                    x:Name="comboClassrooms"
                    Margin="0, 0, 10, 0"></ComboBox>
                <Button
                    x:Name="btnLaunchTest">Démarrer</Button>

            </StackPanel>

        </StackPanel>
    </Grid>
</UserControl>
